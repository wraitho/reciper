<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:layout_marginBottom="@dimen/grid_8"
                                             android:layout_marginEnd="@dimen/grid_24"
                                             android:layout_marginLeft="@dimen/grid_24"
                                             android:layout_marginRight="@dimen/grid_24"
                                             android:layout_marginStart="@dimen/grid_24"
                                             android:layout_marginTop="@dimen/grid_16"
                                             android:background="@color/background_color">

    <TextView
        android:id="@+id/labelIngredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/grid_8"
        android:layout_marginTop="@dimen/grid_8"
        android:text="@string/label_ingredients"
        style="@style/CardTitleTextStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/ingredientsView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/grid_8"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="@dimen/grid_24"
        android:layout_marginTop="@dimen/grid_8"
        android:paddingEnd="@dimen/grid_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelIngredients"
        tools:text="- Some flour\n- Dozens of eggs"/>

</android.support.constraint.ConstraintLayout>
