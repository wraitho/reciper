<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color</item>
        <item name="colorAccent">@color/primary_color</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="CardTitleTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LinkStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/link_blue</item>
    </style>

    <style name="RecipeNameStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

</resources>
